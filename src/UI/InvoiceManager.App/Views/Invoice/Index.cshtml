@model InvoiceManager.App.Models.InvoicesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="col-md-4">
    @using (Html.BeginForm("Index", "Invoice", FormMethod.Get))
    {
        @Html.DropDownListFor(x => Model.SelectedCode, new SelectList(Model.CurrencyCodes, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
        <br />
        <input type="submit" value="Change Currency" class="btn btn-success" />
    }
</div>

<hr />
<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Supplier
            </th>
            <th>
                DateIssued
            </th>
            <th>
                Currency
            </th>
            <th>
                Amount
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateIssued)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InvoiceId" class="btn btn-success">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.InvoiceId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.InvoiceId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
